<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.projects.sweproject.boggle">

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        >
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SinglePlayerLevels"

            android:screenOrientation="portrait"
            />
        <activity android:name=".MultiPlayerLevels"
            android:screenOrientation="portrait"

            />
        <activity android:name=".MultiPlayerTypeActivity"
            android:screenOrientation="portrait"

            />
        <activity android:name=".spNewGame"
            android:screenOrientation="portrait"
            />
        <activity android:name=".mpNewGame"
            android:screenOrientation="portrait"
            />
        <activity android:name=".ShakeActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".JoinActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".HighScore"
            android:screenOrientation="portrait"
            />
        <activity android:name=".MultiPlayerModes"
            android:screenOrientation="portrait"
            />
        <activity android:name=".HighScoreSingle"
            android:screenOrientation="portrait"
            />
        <activity android:name=".HighScoreMulti"
            android:screenOrientation="portrait"
            />
        <activity android:name=".PasscodeActivity"
            android:screenOrientation="portrait"
            />

    </application>

</manifest>