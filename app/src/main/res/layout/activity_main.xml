<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"

    tools:context="com.projects.sweproject.boggle.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_screen"
        android:scaleType="centerCrop"
    />

    <ImageButton
        android:layout_centerHorizontal="true"

        android:id="@+id/button"
        android:background="@drawable/game_buttons"
        android:layout_marginTop="160dp"
        android:layout_width="250dp"
        android:layout_height="60dp" />

    <ImageButton
        android:layout_centerHorizontal="true"
        android:background="@drawable/multi_button"
        android:id="@+id/button2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button"
        android:layout_width="250dp"
        android:layout_height="60dp" />

    <ImageButton
        android:layout_centerHorizontal="true"
        android:background="@drawable/highscore_button"
        android:id="@+id/button3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="60dp" />

    <ImageButton
        android:layout_centerHorizontal="true"
        android:background="@drawable/quit_button"
        android:id="@+id/button4"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="60dp" />





</RelativeLayout>
