<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/highscore_layout"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    <TextView
        android:text="Top Players for Easy Mode:"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/easyNames"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp" />

    <TextView
        android:text="scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/easyScores"
        android:layout_alignBaseline="@+id/easyNames"
        android:layout_alignBottom="@+id/easyNames"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:text="Names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/easyNames"
        android:layout_alignEnd="@+id/easyNames" />

    <TextView
        android:text="Scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_above="@+id/easyScores"
        android:layout_alignRight="@+id/easyScores"
        android:layout_alignEnd="@+id/easyScores" />



    <TextView
        android:text="Top Players for Medium Mode:"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/easyNames"

        android:id="@+id/medium"
        android:textSize="18sp" />

    <TextView
        android:text="names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"

        android:id="@+id/mediumNames"
        android:layout_below="@+id/medNames"
       />

    <TextView
        android:text="scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediumScores"
        android:layout_marginLeft="245dp"
        android:layout_below="@+id/medScores"/>

    <TextView
        android:text="Names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medNames"
        android:textSize="18sp"
        android:layout_marginLeft="43dp"

        android:layout_below="@+id/medium" />

    <TextView
        android:text="Scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medScores"
        android:layout_marginLeft="200dp"
        android:textSize="18sp"
        android:layout_below="@+id/medium" />

    <TextView
        android:text="Top Players for Hard Mode:"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/mediumNames"

        android:id="@+id/hard"
        android:textSize="18sp" />

    <TextView
        android:text="names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"

        android:id="@+id/hardNames"
        android:layout_below="@+id/hNames"
        />

    <TextView
        android:text="scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hardScores"
        android:layout_marginLeft="245dp"
        android:layout_below="@+id/hScores"/>

    <TextView
        android:text="Names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hNames"
        android:textSize="18sp"
        android:layout_marginLeft="43dp"

        android:layout_below="@+id/hard" />

    <TextView
        android:text="Scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hScores"
        android:layout_marginLeft="200dp"
        android:textSize="18sp"
        android:layout_below="@+id/hard" />






</RelativeLayout>